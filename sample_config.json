{
  "info":
  {
    "game": "Gamename",
    "language": "English",
    "version": "v0.0.1",
    "author": "46 OkuMen",
    "authorsite": "http://46okumen.com"
  },
  "images":[             // each object in this array is a file box to place the path to an image to patch
    {
      "id":0,            // might not be necessary since this is already in the array keys
      "name":"Image 1",  // text that gets displayed next to the file entry box
      "type":"mixed",    // types are floppy, hdd, and mixed (which is generally only used on the first entry
      "floppy": {
        "files":[
          {
            "name":"filetopatch.exe",                              // name of file in this image to patch
            "patch":"filetopatch.exe.xdelta"                       // patch file to use with this file
          },
          {
            "name":"filetopatch2.exe",
            "patch":{                                              // patch can be an object for extra configurability
              "type":"boolean",                                    // set by the user in options
              "id":"optionname",                                   // must match the option's id in options
              "true":"filetopatch2whentrue.exe.xdelta",
              "false":"filetopatch2whenfalse.exe.xdelta"
            }
          },
          {
            "name":"/path/to/failsafe.exe",      // name can include a default path
            "patch":{
              "type":"failsafelist",
              "list":[                           // list works like this, try list in order (can be as many files as needed)
                "failsafe-canfail.exe.xdelta",   // try this, but don't throw an error if CRC mismatch
                "failsafe-endgoal.exe.xdelta"    // try this, throw an error if CRC mismatch
              ]
            }
          }
        ]
      },
      "hdd": {
        "files":[
          // same as above
        ]
      }
    },
    {
      "id":1,
      "name":"Image 2",
      "type":"floppy",
      "floppy": {
        "files":[
          // same as above
        ]
      }
    }
    // add more as needed
  ],
  "options":[            // Generally per-game special options, either 
    {                    // Tough to predict these, so just need to see what comes up in hacking more games.
      "id":"speedhack",  // But you can use it to use different patches based on user input...
      "type":"boolean",
      "description": "Faster text speed in cut scenes? (Requires Neko Project II)",
    },
    {
      "id":"delete_all_first",    // an option for space-limited FDIs, like in the Rusty Opening
      "type":"silent",
      "description": "Delete all files on the disk before trying to insert them.",
    }
  ]

}